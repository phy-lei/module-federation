{
  "compilerOptions": {
    // "allowJs": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@ap/*": ["packages/airport/src/*"],
      "@ta/*": ["packages/transport-aircraft/src/*"]
    }
  },
  "include": ["global.d.ts", "packages/**/*"],
  "exclude": ["node_modules", "packages/airport/foundation", "packages/airport/remote"]
}
